generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Rol {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  nombre            String   @unique @db.VarChar(50)
  descripcion       String?  @db.VarChar(255)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  // Relaciones
  usuarios Usuario[]

  @@map("rol")
}

model Usuario {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  usuario           String   @unique @db.VarChar(20)
  clave             String   @db.VarChar(150)
  email             String   @unique @db.VarChar(50)
  rolId             String   @map("rol_id") @db.VarChar(26)
  activo            Boolean  @default(true)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  //Relacion
  rol Rol @relation(fields: [rolId], references: [id], onDelete: Restrict)

  @@map("usuario")
}

model Categoria {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  nombre            String   @db.VarChar(100)
  slug              String   @unique @db.VarChar(120)
  descripcion       String?
  imagenUrl         String?  @map("imagen_url")
  orden             Int?
  parentId          String?  @map("parent_id") @db.VarChar(26)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  // üîπ Relaci√≥n autorreferencial (una categor√≠a puede tener subcategor√≠as)
  subcategorias  Categoria[] @relation("Subcategorias")
  categoriaPadre Categoria?  @relation("Subcategorias", fields: [parentId], references: [id])

  productos Producto[]

  @@map("categoria")
}

model Producto {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  nombre            String   @db.VarChar(150)
  slug              String   @unique @db.VarChar(150)
  descripcion       String?
  precioAprox       Decimal? @map("precio_aprox") @db.Decimal(12, 2)
  destacado         Boolean  @default(false)
  activo            Boolean  @default(true)
  idCategoria       String?  @map("id_categoria") @db.VarChar(26)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  categoria    Categoria?         @relation(fields: [idCategoria], references: [id], onDelete: SetNull)
  imagenes     MediaProducto[]
  materiales   ProductoMaterial[]
  cotizaciones Cotizacion[]

  @@map("producto")
}

model MediaProducto {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  idProducto        String   @map("id_producto") @db.VarChar(26)
  url               String
  esPrincipal       Boolean  @default(false) @map("es_principal")
  orden             Int?
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  producto Producto @relation(fields: [idProducto], references: [id], onDelete: Cascade)

  @@map("media_producto")
}

model Material {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  nombre            String   @unique @db.VarChar(100)
  descripcion       String?
  imagenUrl         String?  @map("imagen_url")
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  productos ProductoMaterial[]

  @@map("material")
}

model ProductoMaterial {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  idProducto        String   @map("producto_id") @db.VarChar(26)
  idMaterial        String   @map("material_id") @db.VarChar(26)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  producto Producto @relation(fields: [idProducto], references: [id], onDelete: Cascade)
  material Material @relation(fields: [idMaterial], references: [id], onDelete: Cascade)

  @@unique([idProducto, idMaterial])
  @@map("producto_material")
}



model Cotizacion {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  nombreCliente     String   @map("nombre_cliente") @db.VarChar(100)
  telefono          String   @db.VarChar(30)
  mensaje           String?
  idProducto        String   @map("producto_id") @db.VarChar(26)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  producto Producto @relation(fields: [idProducto], references: [id], onDelete: Cascade)

  @@map("cotizacion")
}

model Banner {
  id                String   @id @default(dbgenerated("ulid_generate()")) @db.VarChar(26)
  titulo            String?  @db.VarChar(100)
  imagenUrl         String   @map("imagen_url")
  link              String?
  orden             Int?
  activo            Boolean  @default(true)
  fechaCreacion     DateTime @default(now()) @map("fecha_creacion")
  fechaModificacion DateTime @updatedAt @map("fecha_modificacion")

  @@map("banner")
}
